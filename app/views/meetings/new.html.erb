<% provide(:title, 'New Meeting') %>
<h1>New Meeting</h1>

<span style="font-size: 150%;"><%= link_to "back", course_meetings_path(@course) %></span><br><br>
<%= "Please fill in all fields marked with *"%><br><br>

<div class="row">
  	<div class="col-md-5 col-md-offset-4">
   
    <%= form_for([@course, @meeting]) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>   

          <%= f.label :name, "*Name (20 characters maximum)" %>
          <%= f.text_field :name,  class: 'form-control' %><br>

          <%= f.label :venue, "*Venue (12 characters maximum)" %>
          <%= f.text_field :venue,  class: 'form-control' %><br>

         
          <%= f.label :date, "*Date" %>
          <%= f.text_field :date, class: 'datepicker'%><br><br>
    
          <%= f.label :starttime, "*Start time" %>
          <%= f.text_field :starttime, class: 'timepicker' %><br><br>

          <%= f.label :endtime, "End time" %>
          <%= f.text_field :endtime, class: 'timepicker' %><br><br>

          <%= f.label :notes %>
          <%= f.text_area :notes, cols: 7, rows: 5, class: 'form-control' %><br>

      <%= f.submit 'Create Meeting', class: "btn btn-primary" %>
      <% end %>
     
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
    $('.timepicker').timepicker();
  });
</script>

