<%= provide(:title, 'Edit Tutor Information') %>
<h1>
  <%= 'Edit Tutor Information' %>
</h1>

<div class="row">
<div class="info_form_content">
  <div class="col-md-6 col-md-offset-3">
	  <%= form_for([@course, @info]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :content %>
      <%= f.text_area :content, cols: 20, rows: 40, placeholder: 'What the tutor must do . . .', class: 'form-control' %><br>

   	  <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
  </div>
</div>