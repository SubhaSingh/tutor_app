<% provide(:title, 'Feedback') %>
<h1>Feedback</h1>
<h3>
    Please rate the following aspects of the application out of 10 based on your user experience.
</h3>
<style>
  h3 {
  font-size: 1.5em;
  letter-spacing: -1.5px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: #777;
}
</style>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @feedback do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

 <div class="feedback">    
      <%= f.input :role, hint: '(Covenor, Lecturer, Tutor etc)', class: 'form-control' %>

      <%= f.input :clarity, hint: '(Ease of use, easy to navigate etc)',  input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>

      <%= f.input :conciseness, in:0...10, step: 0.1, class: 'form-control' %>

      <%= f.input :familiarity, hint: "(Naturally and intuitively understood) " ,input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>

     
      <%= f.input :responsiveness, hint: "(Speed of interface, interface feedback)", input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>

      <%= f.input :consistency, hint: "(With respect to user interface design)" , input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>

     
      <%= f.input :attractiveness, input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>


      <%= f.input :efficiency, hint: '(Ability to achieve goals without a "fuss")', input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>

     
      <%= f.input :forgiving, label: 'Forgiveness', hint: "(Ability to correct user mistakes)", input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>

      <%= f.input :informativeness, hint: "(The informativeness of user interface with respect to collaborative activities)" ,input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>

      <%= f.input :devices, label: 'Usage on multiple devices', hint: "(cellphones, tablets, laptops etc)" ,input_html: { min: '0', max: '10', step: "0.1" }, class: 'form-control' %>
      </div>
      
      <%= f.input :comments, label:'General Comments' , cols:7, rows: 6, class: 'form-control' %><br><br>

      <%= f.button :submit, 'Submit', class: "btn btn-success" %>
    <% end %>
  </div>
</div>