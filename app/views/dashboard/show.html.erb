<%= provide(:title, 'Dashboard') %>
<h1>
  <%= 'Dashboard' %>
</h1>
   
	<div class="row">
		<aside class="column-md-6">
  			 <section class="course_info">
    	  		
            <h3>
    	  			Courses Convening:
            </h3>
              <h2>  
              <% if @user.courses_convening.any? %>
                <% @courses_convening.each do |course| %><br>
                  <li>
                   <apan><div class="course_name"><%= link_to course.name,  course_tutor_informations_path(course) %>
                    
                     <div class="course_delete_edit"> | <%= link_to "delete", course_path(course), method: :delete, data: { confirm: "Are you sure you want to delete this course ?"} %>
                      | <%= link_to "edit",  edit_course_path(course) %></div>

                      </div></span><br><br>
               
                  </li><br>
                <% end %>
              <% else %><br>
              <li>
               <div class="course_name">
                <%= 'None.' %>
              </div>
              </li>
              <% end %><br><br>
              <span class="button"><%= link_to 'Create New Course', new_course_path, class: 'btn btn-primary' %></span>
      				</h2>
              <h3><br>
              Courses Lecturing:
              </h3>
              <h2>
              <% if @user.courses_lecturing.any? %>
      				  <% @courses_lecturing.each do |course| %><br>
                  <li>
                   <div class="course_name">
                  <%= link_to course.name, course_tutor_informations_path(course) %><br>
                  </div></li>
                  <br><br>
                <% end %><br> 
              <% else %><br>
              <li>
               <div class="course_name">
                <%= 'None.' %>
                </div>
                </li>
              <% end %><br>
      				</h2>
              <h3><br>
              Courses Tutoring:
              </h3>
              <h2>
              <% if @user.courses_tutoring.any? %>
      				  <% @courses_tutoring.each do |course| %><br>
                  <li>
                   <div class="course_name">
                  <%= link_to course.name, course_tutor_informations_path(course) %>
                 </div> </li>
                  <br><br>
                <% end %>
              <% else %><br>
                <li>
                 <div class="course_name">
                <%= 'None.' %>
                </div>
                </li>
              <% end %><br>
              </h2>
          
    		</section>
      </aside>
	</div>
