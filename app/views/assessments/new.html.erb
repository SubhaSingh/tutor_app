
<% provide(:title, 'New Assessment') %>
<h1>New Assessment</h1><br>

<span style="font-size: 150%;"><%= link_to "back", course_assessments_path(@course) %></span><br><br>
<%= "Please fill in all fields marked with *"%><br><br>


<div class="row">
  	<div class="col-md-5 col-md-offset-4">
		<%= form_for([@course, @assessment]) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>		

          <%= f.label :name, "*Name (20 characters maximum)" %>
      		<%= f.text_field :name,  class: 'form-control' %><br>

      		<%= f.label :venue, "*Venue (12 characters maximum)" %>
      		<%= f.text_field :venue,  class: 'form-control' %><br>

         
          <%= f.label :date, "*Date" %>
      		<%= f.text_field :date, class: 'datepicker'%><br><br>
    
          <%= f.label :starttime, "*Start time" %>
          <%= f.text_field :starttime, class: 'timepicker' %><br><br>

          <%= f.label :endtime, "End time" %>
      		<%= f.text_field :endtime, class: 'timepicker' %><br><br>

          <%= f.label :notes %>
      		<%= f.text_area :notes, cols: 7, rows: 5, class: 'form-control' %><br>

			<%= f.submit 'Create Assessment', class: "btn btn-primary" %>
    	<% end %>
     
  	</div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
    $('.timepicker').timepicker();
  });
</script>

