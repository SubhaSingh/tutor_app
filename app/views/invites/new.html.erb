<% provide(:title, "Invite") %>
<h1>Invite</h1>

<span style="font-size: 150%;"><%= link_to "back", course_members_path(@course) %></span><br><br>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for([@course, @invite]) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :email, "*Email" %>
     		<%= f.email_field :email, class: 'form-control' %><br>


			<%= f.submit 'Invite', class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
